<div class="container text-center" style="background: rgb(64, 45, 235);">
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="p-3 mb-2 bg-warning text-dark">
            <nav class="navbar navbar-dark bg-dark" data-bs-theme="dark">
                <div class="container-fluid" style="background-color: rgb(0, 3, 185);">
                    <a class="navbar-brand" href="#">SISTEMA WEB</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-warning">
            <p class="text-start fs-5">Cadastrar - Agendamento de Potenciais Clientes</p>
            <p class="text-start fs-6">Sistema Utilizado para agendamento de serviços.</p>
            <p>
                {{#each post}}
                    {{#dataValues}}
                        <form action="/atualizar" method="POST">
                            <div class="mb-3 text-start">
                                <input type="hidden" name="id" class="form-control" id="nome" value="{{id}}">
                                <label class="form-label">Nome:</label>
                                <input type="name" name="nome" required class="form-control" id="nome" value="{{nome}}"> 
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Telefone:</label>
                                <input type="number" name="telefone" class="form-control" id="telefone" value="{{telefone}}">
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Origem:</label>
                                <select name="origem" required class="form-select" aria-label="Default select example">
                                    <option value="" disabled selected></option>
                                    <option value="celular">Celular</option>
                                    <option value="whatsapp">Whatsapp</option>
                                    <option value="telefone_fixo">Telefone Fixo</option>
                                </select>
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Data do Contato:</label>
                                <input type="date"  min="2023-01-01" max="2023-12-31" name="data_contato" class="form-control" id="data_contato" aria-describedby="emailHelp" value="{{data_contato}}">
                            </div>
                            <div class="mb-3 text-start">
                                <label class="form-label">Observação:</label>
                                <textarea name="observacao" required class="form-control" placeholder="" id="observacao" style="height: 100px">{{observacao}}</textarea>
                            </div>
                            <div class="mb-3 text-start">
                                <button type="submit" class="btn btn-success">Atualizar</button>
                            </div>
                        </form>
                    {{/dataValues}}
                {{/each}}
            </p>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
</div>